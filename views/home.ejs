<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/navbar-styles.css" />
    <link rel="stylesheet" href="/blog-home.css" />
  </head>
  <body>
    <%- include("partials/navbar")%>
    <!--HEADER-->

    <div class="portada">Hola</div>

    <!-- Page Content -->
    <% articles.forEach(article => { %>

    <section class="container bg-light pt-5 mt-5 mb-5">
      <div class="row row-cols-3 g-4">
        <div class="col">
          <div class="card">
            <img src="<%= article.image %>" class="card-img-top" alt="imagen" />
            <div class="card-body">
              <h5 class="card-title"><%= article.title %></h5>
              <p class="card-text"><%= article.content.replace() %></p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <% }); %>

    <!-- /.container -->

    <%- include("partials/footer")%>
    <script src="../index.js"></script>
  </body>
</html>
