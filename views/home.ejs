<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/navbar-styles.css" />
    <link rel="stylesheet" href="/blog-home.css" />
    <link rel="stylesheet" href="/cover-page.css" />
  </head>
  <body>
    <!--NavBar-->
    <%- include("partials/navbar")%>
    <!-- Page Content -->
    <%- include("partials/cover-page")%>

    <section class="container bg-light pt-5 mt-5 mb-5">
      <div class="row">
        <% articles.forEach(article => { %>
        <div class="col-12 col-md-4 mb-5">
          <div class="card">
            <img
              src="/img/<%= article.image %>"
              class="card-img-top"
              alt="imagen"
            />
            <div class="card-body">
              <h5 class="card-title"><%= article.title %></h5>
              <p class="card-text"><%= article.content.replace() %></p>
              <p class="card-text"><%= article.author_id %></p>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </section>

    <!-- Footer -->
    <%- include("partials/footer")%>
    <script src="../index.js"></script>
  </body>
</html>
