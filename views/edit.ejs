<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/navbar-styles.css" />
  </head>
  <body>
    <!--NavBar-->
    <%- include("partials/navbar")%>

    <div class="container pt-5 mt-5 mb-5" style="padding-bottom: 6rem">
      <div class="card border-secondary">
        <div class="card-header">Nuevo Articulo</div>
        <div class="card-body">
          <form action="/save" method="POST">
            <div class="mb-3">
              <label for="user" class="form-label">Title</label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                placeholder="Pon un titulo"
              />
            </div>
            <div class="mb-3">
              <label for="content" class="form-label">Content</label>
              <input
                type="text"
                class="form-control"
                id="content"
                name="content"
                placeholder="Subir contenido"
              />
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Image</label>

              <div class="input-group mb-3">
                <button
                  class="btn btn-outline-secondary"
                  type="button"
                  id="button-addon1"
                >
                  Cargar
                </button>
                <input
                  type="text"
                  class="form-control"
                  id="image"
                  name="image"
                  placeholder="Subir una imagen"
                />
              </div>
            </div>
            <div class="mb-3">
              <label for="date" class="form-label">Date</label>
              <input
                type="text"
                class="form-control"
                id="date"
                name="date"
                placeholder="Pon la fecha"
              />
            </div>
            <div class="mb-3">
              <label for="author" class="form-label">Author</label>
              <input
                type="text"
                class="form-control"
                id="author"
                name="author"
                placeholder="Pon un Author"
              />
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a href="/" class="btn btn-secondary">Cacelar</a>
          </form>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include("partials/footer")%>
    <script src="../index.js"></script>
  </body>
</html>
